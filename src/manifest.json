{
  "name": "Data Leak Pioneer Shield Study",
  "description": "__MSG_extensionDescription__",
  "version": "0.2.0",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "dataleak-pioneer-shield-study@pioneer.mozilla.org",
      "strict_min_version": "61.0a1"
    }
  },
  "default_locale": "en-US",
  "experiment_apis": {
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    },
    "testingOverrides": {
      "schema": "./privileged/testingOverrides/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/testingOverrides/api.js",
        "paths": [["testingOverrides"]]
      }
    }
  },
  "permissions": ["management", "storage", "alarms"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/openwpm.content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["studySetup.js", "feature.js", "background.js"]
  },
  "icons": {
    "48": "icons/shield-icon.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/shield-icon.svg",
    "default_title": "__MSG_buttonTitle__"
  }
}
